<Page x:Class="CarRent.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CarRent.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="250">
            <TextBlock Text="Login" />
            <TextBox Name="TextBoxLogin" />
            <TextBlock Text="Password" />
            <TextBox Name="TextBoxPassword" />
            <Button Content="Registration"
                    Name="ButtonRegistration"
                    Click="ButtonRegistration_Click" />
        </StackPanel>
        <Button HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Content="Back"
                Name="ButtonBack"
                Click="ButtonBack_Click"
                Width="50" />
    </Grid>
</Page>
